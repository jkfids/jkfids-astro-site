---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import Comments from "@components/Comments.astro";
import BackToPrevious from "@components/BackToPrevious.astro";

type Props = {
  entry: CollectionEntry<"memes">;
};

const { entry } = Astro.props as {
  entry: CollectionEntry<"memes">;
};

---

<div class="group relative flex flex-col rounded-lg border border-black/15 p-3 md:p-4 transition-colors duration-300 ease-in-out hover:bg-black/5 dark:border-white/20 dark:hover:bg-white/5">
  <a href={`/${entry.collection}/${entry.slug}`} class="flex-1">
    <h3 class="text-lg md:text-xl font-semibold mb-2 md:mb-4">
      {entry.data.title}
    </h3>
    <Image
      src={entry.data.img ?? ''}
      alt={entry.data.imgAlt ?? ''}
      width={1024}
      height={480}
      class="h-auto shadow-md rounded-lg hover:opacity-80 transition object-cover"
      loading="eager"
    />
  </a>
  <!-- <div class="mt-2 md:mt-4">
    <Comments href={`/${entry.collection}/${entry.slug}`}>Comments</Comments>
  </div> -->
</div>
